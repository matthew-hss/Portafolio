<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="path.logs">${sys:java.io.tmpdir}</Property>
    </Properties>
    
    <Appenders>
        <!-- Archivo principal -->
        <RollingFile name="ROOT_SCHEDULER_PORTAFOLIO" 
                     fileName="${sys:path.logs}${sys:file.separator}portafolio${sys:file.separator}scheduler${sys:file.separator}portafolio.log" 
                     filePattern="${sys:path.logs}${sys:file.separator}portafolio${sys:file.separator}scheduler${sys:file.separator}portafolio.log.%d{yyyyMMdd}.gz" 
                     append="true">
            <PatternLayout pattern="%d{dd/MM/yyyy}; %d{HH:mm:ss}; %p; (%t) %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
            <DefaultRolloverStrategy max="31"/>
        </RollingFile>

        <!-- DEBUG -->
        <RollingFile name="DEBUG_SCHEDULER_PORTAFOLIO" 
                     fileName="${sys:path.logs}${sys:file.separator}portafolio${sys:file.separator}scheduler${sys:file.separator}debug.log" 
                     filePattern="${sys:path.logs}${sys:file.separator}portafolio${sys:file.separator}scheduler${sys:file.separator}debug.log.%d{yyyyMMdd}.gz" 
                     append="true">
            <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{dd/MM/yyyy}; %d{HH:mm:ss}; %p; {%C->%M} %m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
            <DefaultRolloverStrategy max="31"/>
        </RollingFile>
        
        <!-- ERROR -->
        <RollingFile name="ERROR_SCHEDULER_PORTAFOLIO" 
                     fileName="${sys:path.logs}${sys:file.separator}portafolio${sys:file.separator}scheduler${sys:file.separator}error.log" 
                     filePattern="${sys:path.logs}${sys:file.separator}portafolio${sys:file.separator}scheduler${sys:file.separator}error.log.%d{yyyyMMdd}.gz" 
                     append="true">
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="[%d{dd/MM/yyyy HH:mm:ss,SSS}] {%C->%M} %m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
            <DefaultRolloverStrategy max="31"/>
        </RollingFile>

        <!-- INFO -->
        <RollingFile name="INFO_SCHEDULER_PORTAFOLIO" 
                     fileName="${sys:path.logs}${sys:file.separator}portafolio${sys:file.separator}scheduler${sys:file.separator}info.log" 
                     filePattern="${sys:path.logs}${sys:file.separator}portafolio${sys:file.separator}scheduler${sys:file.separator}info.log.%d{yyyyMMdd}.gz" 
                     append="true">
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout pattern="%d{dd/MM/yyyy}; %d{HH:mm:ss}; %p; %m%n" />
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
            <DefaultRolloverStrategy max="31"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="cl.duoc.portafolio" level="DEBUG">
            <AppenderRef ref="INFO_SCHEDULER_PORTAFOLIO" />
            <AppenderRef ref="ERROR_SCHEDULER_PORTAFOLIO" />
            <AppenderRef ref="DEBUG_SCHEDULER_PORTAFOLIO" />
        </Logger>

        <Root level="ERROR">
            <AppenderRef ref="ROOT_SCHEDULER_PORTAFOLIO"/>
        </Root>
    </Loggers>
</Configuration>